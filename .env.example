# Bot Telegram (obter em: https://t.me/BotFather)
TELEGRAM_BOT_TOKEN=123456789:EXEMPLO_NAO_USAR

# Banco de Dados PostgreSQL (Railway gera automaticamente)
# Não precisa configurar manualmente - Railway já fornece
DATABASE_URL=postgresql://user:pass@host:5432/db

# Pluggy Open Finance (obter em: https://pluggy.ai)
PLUGGY_CLIENT_ID=seu_client_id_pluggy
PLUGGY_CLIENT_SECRET=seu_client_secret_pluggy
PLUGGY_SANDBOX=true

# OpenAI (obter em: https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-exemplo123...

# Opcional: Google Gemini
GEMINI_API_KEY=AIza_exemplo...

# Configurações do Servidor
PORT=8080
ENV=production

# ⚠️  LEMBRE-SE:
